@model RomanNumeralGenerator.LogHistory
@{
    ViewData["Title"] = "Index";

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Roman numeral converter</h2>
            </div>
        </div>
        <form method="post">
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <p class="text-primary">Enter number from 1 to 3999 to convert it into Roman numeral.</p>
                </div>
                <div class="mb-3">
                    <label asp-for="Input"></label>
                    <input asp-for="Input" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary" style="width: 150px">Convert</button>
                <a asp-controller="Home" asp-action="History" class="btn btn-secondary" style="width: 150px">
                    See history
                </a>
                <partial name="_Popup"/>
            </div>
        </form>
    </div>
}